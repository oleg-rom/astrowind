---
import Breadcrumb from "../breadcrumbs/Breadcrumb.astro"

const {
  title = '',
  breadcrumbs = [],
  subtitle = '',
  class: className = '',
} = Astro.props
---

<div class="w-full min-h-60 md:min-h-80 flex items-center justify-center bg-gradient-to-r from-primary-300 via-accent-100 to-secondary-300">
  <div class="flex flex-col items-center gap-0 w-full">
    <h2 class="text-2xl md:text-4xl font-extrabold tracking-tight text-gray-900 dark:text-gray-50 uppercase">{title}</h2>
    <Breadcrumb items={breadcrumbs} />
  </div>
</div>
