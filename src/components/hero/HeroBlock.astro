---
import { twMerge } from 'tailwind-merge';
import H2 from "../headers/H2.astro"
const { title, text, textClass = '', titleClass = '' } = Astro.props
---

<div class="px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
  <div class="mx-auto max-w-screen-sm text-center">
    <H2>{title}</H2>

    <p
      class={twMerge('font-light text-gray-500 text-lg md:text-xl', textClass)}
      data-aos="fade-up"
      data-aos-delay="300">
      {text}
    </p>
  </div>
</div>
