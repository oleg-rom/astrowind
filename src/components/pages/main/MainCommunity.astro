---
import HeroBlock from '../../hero/HeroBlock.astro';
import Button from '~/components/ui/Button.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

const {
  title = '',
  subtitle = '',
  tagline = '',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<!-- Community Section -->
<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title="Присоединяйтесь к сообществу"
    subtitle="Следите за новостями и укрепляйтесь в своем пути через нашу группу в Facebook и телеграм-канал. Поддержка, свидетельства, обновления курсов и живое общение ждут вас."
  />
  <div class="max-w-screen-md mx-auto px-6 text-center">
    <div class="w-full flex flex-col md:flex-row gap-4 flex-nowrap md:justify-center items-center">
      <Button
        variant="primary"
        icon="tabler:brand-facebook"
        text="Facebook"
        href="https://facebook/sozorussian/"
        target="_blank"
        class="gap-3 w-full md:w-auto"
      />
      <Button
        variant="secondary"
        icon="tabler:brand-telegram"
        text="Telegram"
        href="https://telegram/bethelsozo/"
        target="_blank"
        class="gap-3 w-full md:w-auto"
      />
